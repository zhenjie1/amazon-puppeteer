{
  "env": {
    "browser": true,
    "node": false
  },
  "extends": [
    /** @see https://eslint.vuejs.org/rules/ */
    "plugin:vue/vue3-recommended"
  ],
  "parserOptions": {
    "parser": "@typescript-eslint/parser",
    "ecmaVersion": 12,
    "sourceType": "module"
  },
  "rules": {
    "vue/max-attributes-per-line": ["error", {
      "singleline": 5,      
      "multiline": 1
    }],
    "vue/html-closing-bracket-spacing": "off",
    "vue/html-self-closing": "off",
    "no-path-concat": "off"
  }
}
